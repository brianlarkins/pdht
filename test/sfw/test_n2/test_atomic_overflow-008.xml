<?xml version="1.0"?>
<test>
    <desc>Test atomic overflow with USE_ONCE for LE and overflow LE</desc>
    <ptl>
      <ptl_ni ni_opt="NO_MATCH PHYSICAL">
        <ompi_rt>
          <ptl_ni ni_opt="NO_MATCH LOGICAL">
            <ptl_eq>
              <ptl_pt>
                <ptl_get_id>

                  <if rank="0">
                    <ptl_md md_data="0xaa">

                      <!-- Wait for rank 1 to set up the receiving buffer -->
                      <barrier/>

                      <ptl_atomic ack_req="ACK" length="4" match="0x5555" target_id="1"/>

                      <!-- Wait for the packet containing the ack -->
                      <ptl_eq_wait>
                        <check event_type="SEND"/>
                      </ptl_eq_wait>

                      <!-- Wait for the ack -->
                      <ptl_eq_wait>
                        <check event_type="ACK"/>
                      </ptl_eq_wait>

                    </ptl_md>
                  </if>

                  <if rank="1">
                    <ptl_le_append le_data="0x77" le_opt="OP_PUT USE_ONCE EVENT_LINK_DISABLE" list="OVERFLOW">

                      <!-- Force rank 0 to wait for the buffer to be ready -->
                      <barrier/>

                      <ptl_eq_wait>
                        <check event_type="ATOMIC"/>
                      </ptl_eq_wait>


                      <ptl_eq_wait>
                        <check event_type="AUTO_UNLINK"/>
                      </ptl_eq_wait>


                      <ptl_le_append le_data="0x77" le_opt="OP_PUT USE_ONCE" list="PRIORITY">

                        <!-- Wait for overflow event -->
                        <ptl_eq_wait>
                          <check event_type="ATOMIC_OVERFLOW"/>
                        </ptl_eq_wait>

                        <ptl_eq_wait>
                          <check event_type="AUTO_FREE"/>
                        </ptl_eq_wait>


                        <ptl_eq_wait>
                          <check event_type="AUTO_UNLINK"/>
                        </ptl_eq_wait>

                        <ptl_le_unlink ret="ARG_INVALID"/>
                      </ptl_le_append>

                      <ptl_le_unlink ret="ARG_INVALID"/>

                    </ptl_le_append>

                  </if>

                </ptl_get_id>
              </ptl_pt>
            </ptl_eq>
          </ptl_ni>
        </ompi_rt>
      </ptl_ni>
    </ptl>
  </test>
