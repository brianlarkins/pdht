<?xml version="1.0"?>
<test>
  <desc>Test ct events with swap to le</desc>
  <ptl>
    <ptl_ni ni_opt="NO_MATCH PHYSICAL">
      <ompi_rt>
        <ptl_ct>
          <ptl_pt pt_index="2">
            <ptl_le le_opt="OP_PUT OP_GET CT_COMM" pt_index="2" uid="ANY">
              <ptl_ct>
                <ptl_md md_opt="CT_SEND">
                  <ptl_ct>
                    <ptl_md md_opt="CT_REPLY">
                      <ptl_swap atom_op="SWAP" pt_index="2" target_id="SELF"/>
                      <ptl_ct_wait ct_handle="ct[0]" ct_test="1"/>
                      <ptl_ct_get ct_handle="ct[0]">
                        <check ct_event_failure="0" ct_event_success="1"/>
                      </ptl_ct_get>
                      <ptl_ct_wait ct_handle="ct[1]" ct_test="1"/>
                      <ptl_ct_get ct_handle="ct[1]">
                        <check ct_event_failure="0" ct_event_success="1"/>
                      </ptl_ct_get>
                      <ptl_ct_wait ct_handle="ct[2]" ct_test="1"/>
                      <ptl_ct_get ct_handle="ct[2]">
                        <check ct_event_failure="0" ct_event_success="1"/>
                      </ptl_ct_get>
                    </ptl_md>
                  </ptl_ct>
                </ptl_md>
              </ptl_ct>
            </ptl_le>
          </ptl_pt>
        </ptl_ct>
      </ompi_rt>
    </ptl_ni>
  </ptl>
</test>
