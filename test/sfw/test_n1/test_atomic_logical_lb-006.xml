<?xml version="1.0"?>
<test>
  <desc>Test atomic prod/char</desc>
  <ptl>
    <ptl_ni>
      <ompi_rt>
        <ptl_ni ni_opt="MATCH LOGICAL">
          <ptl_eq>
            <ptl_pt>

              <ptl_me me_data="0x07" me_match="0x5555" me_opt="OP_PUT EVENT_LINK_DISABLE">
                <ptl_eq>
                  <ptl_md md_data="0x09">
                    <ptl_atomic atom_op="PROD" atom_type="INT8" length="4" match="0x5555" target_id="SELF"/>
                    <ptl_eq_wait eq_handle="eq[0]">
                      <check event_type="ATOMIC"/>
                    </ptl_eq_wait>
                    <ptl_eq_wait eq_handle="eq[1]">
                      <check event_type="SEND"/>
                    </ptl_eq_wait>

                  </ptl_md>
                </ptl_eq>
                <check length="4" me_data="0x3f" type="INT8"/>
                <check length="1" me_data="7" offset="4" type="INT8"/>
              </ptl_me>
            </ptl_pt>
          </ptl_eq>

          <barrier/>
        </ptl_ni>
      </ompi_rt>
    </ptl_ni>
  </ptl>
</test>
