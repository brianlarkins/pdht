<?xml version="1.0"?>
<test>
  <desc>Test max_msg_size up to limit for trig put</desc>
  <ptl>
    <ptl_ni desired_max_msg_size="4">
      <check actual_max_msg_size="4"/>
      <ptl_pt>
        <ptl_me>
          <ptl_md>
            <ptl_ct>
              <ptl_trig_put length="4" target_id="SELF"/>
              <msleep count="50"/>
            </ptl_ct>
          </ptl_md>
        </ptl_me>
      </ptl_pt>
    </ptl_ni>
  </ptl>
</test>
