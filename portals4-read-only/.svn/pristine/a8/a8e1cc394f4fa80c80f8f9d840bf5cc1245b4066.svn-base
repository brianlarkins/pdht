<?xml version="1.0"?>
<test>
    <desc>Test search atomic with ME</desc>
    <ptl>
      <ptl_ni ni_opt="MATCH PHYSICAL">
        <ompi_rt>
          <ptl_ni ni_opt="MATCH LOGICAL">
            <ptl_eq>
              <ptl_pt>
                <ptl_get_id>

                  <if rank="0">
                    <ptl_md md_data="0xaa">

                      <!-- Wait for rank 1 to set up the receiving buffer -->
                      <barrier/>

                      <ptl_atomic ack_req="ACK" length="4" match="0x5555" target_id="1"/>

                      <!-- Wait for the packet containing the ack -->
                      <ptl_eq_wait>
                        <check event_type="SEND"/>
                      </ptl_eq_wait>

                      <!-- Wait for the ack -->
                      <ptl_eq_wait>
                        <check event_type="ACK"/>
                      </ptl_eq_wait>

                    </ptl_md>
                  </if>

                  <if rank="1">
                    <ptl_me list="OVERFLOW" me_data="0x77" me_match="0x5555" me_opt="OP_PUT EVENT_LINK_DISABLE">

                      <!-- Force rank 0 to wait for the buffer to be ready -->
                      <barrier/>

                      <ptl_eq_wait>
                        <check event_type="ATOMIC"/>
                      </ptl_eq_wait>

                      <!-- Search a few times -->
                      <repeat count="3">
                        <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="ONLY">

                          <!-- Wait for PTL_NI_OK event -->
                          <ptl_eq_wait>
                            <check event_ni_fail="OK" event_type="SEARCH"/>
                            <check event_ptl_list="OVERFLOW"/>
                          </ptl_eq_wait>

                        </ptl_me_search>
                      </repeat>

                      <!-- Delete -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="DELETE">

                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_type="ATOMIC_OVERFLOW"/>
                        </ptl_eq_wait>

                      </ptl_me_search>

                      <!-- Try to delete again -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="DELETE">

                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>

                      </ptl_me_search>

                      <!-- Try to search again -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="ONLY">

                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>

                      </ptl_me_search>

                    </ptl_me>
                  </if>

                </ptl_get_id>
              </ptl_pt>
            </ptl_eq>
          </ptl_ni>
        </ompi_rt>
      </ptl_ni>
    </ptl>
  </test>