<?xml version="1.0"?>
<test>
  <desc>Test ct events with put to le with CT_BYTES</desc>
  <ptl>
    <ptl_ni ni_opt="NO_MATCH PHYSICAL">
      <ompi_rt>
        <ptl_ct>
          <ptl_pt pt_index="2">
            <ptl_le le_opt="OP_PUT CT_COMM CT_BYTES" pt_index="2" uid="ANY">
              <ptl_ct>
                <ptl_md md_opt="CT_SEND CT_ACK CT_BYTES">
                  <ptl_put ack_req="CT_ACK" length="10" pt_index="2" target_id="SELF"/>
                  <ptl_ct_wait ct_handle="ct[0]" ct_test="10"/>
                  <ptl_ct_get ct_handle="ct[0]">
                    <check ct_event_failure="0" ct_event_success="10"/>
                  </ptl_ct_get>
                  <ptl_ct_wait ct_handle="ct[1]" ct_test="20"/>
                  <ptl_ct_get ct_handle="ct[1]">
                    <check ct_event_failure="0" ct_event_success="20"/>
                  </ptl_ct_get>
                </ptl_md>
              </ptl_ct>
            </ptl_le>
          </ptl_pt>
        </ptl_ct>
      </ompi_rt>
    </ptl_ni>
  </ptl>
</test>
