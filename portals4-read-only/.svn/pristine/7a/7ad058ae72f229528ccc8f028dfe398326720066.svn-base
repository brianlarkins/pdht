<?xml version="1.0"?>
<test>
  <desc>Test max_atomic_size up to limit for fetch</desc>
  <ptl>
    <ptl_ni desired_max_atomic_size="4">
      <check actual_max_atomic_size="4"/>
      <ptl_pt>
        <ptl_me>
          <ptl_md>
            <ptl_md>
              <ptl_fetch length="4" target_id="SELF"/>
              <msleep count="50"/>
            </ptl_md>
          </ptl_md>
        </ptl_me>
      </ptl_pt>
    </ptl_ni>
  </ptl>
</test>
