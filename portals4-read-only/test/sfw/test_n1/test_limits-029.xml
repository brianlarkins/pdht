    <ptl_ni desired_max_msg_size="4">
      <check actual_max_msg_size="4"/>
      <ptl_pt>
        <ptl_me>
          <ptl_md>
            <ptl_get length="4" target_id="SELF"/>
            <msleep count="50"/>
          </ptl_md>
        </ptl_me>
      </ptl_pt>
    </ptl_ni>
  </ptl>
</test>
